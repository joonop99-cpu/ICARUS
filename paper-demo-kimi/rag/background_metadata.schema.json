{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Paper Background Metadata",
  "type": "object",
  "required": ["paper_id", "title", "year", "authors", "field_tags", "background", "problem_gap", "why_this_study", "citations"],
  "properties": {
    "paper_id": {"type": "string"},
    "title": {"type": "string"},
    "year": {"type": "integer"},
    "authors": {"type": "array", "items": {"type": "string"}},
    "field_tags": {"type": "array", "items": {"type": "string"}},
    "background": {"type": "string"},
    "problem_gap": {"type": "string"},
    "why_this_study": {"type": "string"},
    "citations": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["label", "title"],
        "properties": {
          "label": {"type": "string"},
          "title": {"type": "string"},
          "doi": {"type": "string"},
          "url": {"type": "string"}
        }
      }
    }
  }
}
